#ghost_panel {
    position: absolute;
    picking-mode: ignore;
    display: none;
    opacity: 0.8;
    justify-content: center;
    align-items: center;
}

#ghost_icon {
    width: 64px;
    height: 64px;
    picking-mode: ignore;
    border-width: 2px;
    border-color: rgba(255, 255, 255, 0.5);
    border-radius: 10px;
    background-color: rgba(0, 0, 255, 0.5);
}
